<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.nrg.xnat.pipeline</groupId>
	<artifactId>xnat_tools</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<name>XNAT Tools</name>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
	</properties>

	<dependencies>

		<!-- Spring EBR dependencies -->
		<dependency>
			<groupId>org.apache.log4j</groupId>
			<artifactId>com.springsource.org.apache.log4j</artifactId>
			<version>1.2.16</version>
		</dependency>
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>com.springsource.org.apache.commons.lang</artifactId>
			<version>2.5.0</version>
		</dependency>
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>com.springsource.org.apache.commons.logging</artifactId>
			<version>1.1.1</version>
		</dependency>

		<!-- Upgradable libraries -->
		<dependency>
			<!-- TODO: Upgrade to 2.4.0 -->
			<groupId>org.apache.xmlbeans</groupId>
			<artifactId>com.springsource.org.apache.xmlbeans</artifactId>
			<version>2.2.0</version>
		</dependency>
		<dependency>
			<!-- TODO: Upgrade to 2.3.0 -->
			<groupId>org.apache.xmlbeans</groupId>
			<artifactId>xmlbeans-xpath</artifactId>
			<version>2.2.0</version>
		</dependency>
		<dependency>
			<!-- TODO: Upgrade to 1.4 or new package or use Spring. -->
			<groupId>axis</groupId>
			<artifactId>axis</artifactId>
			<version>1.3</version>
		</dependency>
		<dependency>
			<!-- Upgradable to 1.1.10 or later versions -->
			<groupId>org.restlet</groupId>
			<artifactId>org.restlet</artifactId>
			<version>1.1-RC1</version>
		</dependency>
		<dependency>
			<!-- Upgradable to 1.1.10 or later versions -->
			<groupId>com.noelios.restlet</groupId>
			<artifactId>com.noelios.restlet</artifactId>
			<version>1.1-RC1</version>
		</dependency>
		<dependency>
			<!-- Upgradable to 1.1.10 or later versions -->
			<groupId>com.noelios.restlet</groupId>
			<artifactId>com.noelios.restlet.ext.net</artifactId>
			<version>1.1.8</version>
		</dependency>

		<!-- System-scoped system libraries -->
		<dependency>
			<groupId>org.nrg.xnat.pipeline</groupId>
			<artifactId>pipelineXNAT</artifactId>
			<version>1.0</version>
			<scope>system</scope>
			<systemPath>${basedir}/lib/pipelineXNAT.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>org.nrg.xnat.pipeline</groupId>
			<artifactId>xdat-beans</artifactId>
			<version>1.0</version>
			<scope>system</scope>
			<systemPath>${basedir}/lib/xdat-beans-1.0.jar</systemPath>
		</dependency>

		<!-- Test dependencies -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.8.1</version>
			<scope>test</scope>
		</dependency>

	</dependencies>

	<build>

		<!-- TODO: Standardize output naming to Maven defaults to allow version info in filename. -->
		<finalName>XNATTools</finalName>
		
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>findbugs-maven-plugin</artifactId>
				<version>2.3.2</version>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>emma-maven-plugin</artifactId>
				<version>1.0-alpha-3</version>
			</plugin>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<compilerVersion>1.6</compilerVersion>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.9</version>
			</plugin>
		</plugins>

	</build>

	<reporting>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>findbugs-maven-plugin</artifactId>
				<version>2.3.1</version>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>emma-maven-plugin</artifactId>
				<version>1.0-alpha-3</version>
			</plugin>
		</plugins>
	</reporting>

	<repositories>
		<repository>
			<name>SpringSource EBR Release Repository</name>
			<id>com.springsource.repository.bundles.release</id>
			<url>http://repository.springsource.com/maven/bundles/release</url>
		</repository>
		<repository>
			<name>SpringSource EBR External Release Repository</name>
			<id>com.springsource.repository.bundles.external</id>
			<url>http://repository.springsource.com/maven/bundles/external</url>
		</repository>
		<repository>
			<name>Java Maven Repository</name>
			<id>java.net</id>
			<url>http://download.java.net/maven/2</url>
		</repository>
		<repository>
			<name>Maven Central Repository</name>
			<id>maven.org</id>
			<url>http://repo2.maven.org/</url>
		</repository>
		<repository>
			<id>maven-restlet</id>
			<name>Public online Restlet repository</name>
			<url>http://maven.restlet.org</url>
		</repository>
	</repositories>

</project>
